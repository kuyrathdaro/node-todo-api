{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["ES2017", "ESNext.AsyncIterable"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "allowJs": false, // Set to true only if you have JS files in src/
    "sourceMap": true,
    "outDir": "./dist",
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    // "strict": true, // Uncomment for strict type checking
    // "skipLibCheck": true // Uncomment to skip type checking of all declaration files
  },
  "include": [
    "./src/**/*",
    "./src/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "tests"
  ]
}